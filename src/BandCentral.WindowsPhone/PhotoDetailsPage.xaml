                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton x:Name="AddEffectsButton"
                                  Style="{StaticResource DarkAppbarButtonStyle}"
                                  Grid.Column="1"
                                  Label="Add an Effect"
                                  HorizontalAlignment="Stretch">
