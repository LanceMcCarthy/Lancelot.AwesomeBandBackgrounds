                        </AppBarButton.Icon>
                        <AppBarButton.Flyout>
                            <Flyout Placement="Full">
                                <Grid>
                                    <ListView x:Name="EffectsListView"
                                              ItemsSource="{Binding FilterEffects}"
                                              IsItemClickEnabled="True"
                                              ItemClick="EffectsListView_OnItemClick"
                                              HorizontalAlignment="Center">
                                        <ListView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapGrid Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListView.ItemsPanel>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5"
                                                      Width="175"
                                                      Height="140">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Border Grid.Column="0">
                                                        <Image Source="{Binding ThumbnailPath}"
                                                               Stretch="UniformToFill" />
                                                    </Border>
                                                    <StackPanel VerticalAlignment="Bottom"
                                                                Grid.Row="1"
                                                                Background="{StaticResource BlueAgainBlueBrush}">
                                                        <TextBlock Text="{Binding Title}"
                                                                   TextWrapping="Wrap"
                                                                   FontFamily="Century Gothic"
                                                                   HorizontalAlignment="Center"
                                                                   FontSize="14"
                                                                   Foreground="{StaticResource LightBrush}" />
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Flyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>

                    <AppBarButton x:Name="SendToBandButton"
                                  Style="{StaticResource DarkAppbarButtonStyle}"
                                  Grid.Column="2"
                                  Icon="SetLockScreen"
                                  Label="Send to Band"
                                  HorizontalAlignment="Stretch"
                                  Click="SendToBandButton_OnClick">
                    </AppBarButton>

                </Grid>
            </Grid>
        </Grid>

        <primitives:RadBusyIndicator IsActive="{Binding IsBusy}"
                                     FontFamily="Century Gothic"
                                     Content="{Binding IsBusyMessage}"
                                     AnimationStyle="AnimationStyle7"
                                     Background="#BF000000"
                                     Foreground="{StaticResource LightBrush}" />
    </Grid>
</Page>
