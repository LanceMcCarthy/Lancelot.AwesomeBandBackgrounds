        	Stretch="Uniform"
              Visibility="Collapsed"
        	Fill="#FF2600F4"
        	Width="150"
        	Height="150"
        	HorizontalAlignment="Center"
        	VerticalAlignment="Top"
        	RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False">
        	<Path.RenderTransform>
        		<CompositeTransform TranslateY="40" />
        	</Path.RenderTransform>
        </Path>

        <Grid x:Name="BandPreviewGrid"
              Background="#D8FFFFFF"
              Visibility="Collapsed">
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid x:Name="BandContainerGrid"
                      Grid.Row="0"
                      Background="{StaticResource HalfTransparentDarkBrush}">
                    <Grid x:Name="PhotoGrid"
                          MinHeight="131"
                          Margin="0">

                        <Border x:Name="PhotoBorder"
                                Height="{Binding DataContext.ListItemSize.Height, ElementName=Page}"
                                BorderThickness="0,1,0,0"
                                BorderBrush="#E5FFFFFF">

                            <Image x:Name="PreviewImage"
                                   Stretch="UniformToFill"/>
                        </Border>

                        <Grid x:Name="TimeGrid"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal"
                                        d:LayoutOverrides="Height">
                                <TextBlock x:Name="TimeTextBlock"
                                           Text="12:41"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Left"
                                           FontFamily="Segoe WP SemiLight"
                                           FontSize="96"
                                           Margin="10,0,0,-5"
                                           Foreground="{StaticResource LightBrush}" />
                                <StackPanel VerticalAlignment="Bottom"
                                            Margin="0,0,0,15">
                                    <TextBlock Text="Thu"
                                               FontFamily="Segoe UI Light"
                                               Foreground="{StaticResource LightBrush}"
                                               FontSize="24" />
                                    <TextBlock Text="02"
                                               FontFamily="Segoe UI Light"
                                               Foreground="{StaticResource LightBrush}"
                                               FontSize="24" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>

                <Grid x:Name="ButtonsGrid"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <AppBarButton x:Name="UndoButton"
                                  Style="{StaticResource DarkAppbarButtonStyle}"
                                  Grid.Column="0"
                                  Label="undo"
                                  HorizontalAlignment="Stretch"
                                  Click="UndoButton_OnClick">
                        <AppBarButton.Icon>
                            <PathIcon HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
